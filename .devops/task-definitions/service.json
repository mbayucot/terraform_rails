{
  "family": "${family}",
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "web",
      "image": "<IMAGE1_NAME>",
      "portMappings": [
        {
          "hostPort": 3000,
          "containerPort": 80
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "${log_group}",
          "awslogs-region": "${region}",
          "awslogs-stream-prefix": "demo-web"
        }
      },
      "environment": [
        {
          "name": "RAILS_ENV",
          "value": "production"
        }
      ]
    }
  ]
}
